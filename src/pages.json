{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom"
      }
    }, {
      "path": "pages/me/index",
      "style": {
        "navigationStyle": "custom"
      }
    }
  ],
  "subPackages": [{
    "root": "pagesA",
    "pages": [{
      "path": "register/index",
      "style": {
        "navigationBarTitleText": "完善个人信息"
      }
    }, {
      "path": "editProfile/index",
      "style": {
        "navigationBarTitleText": "修改个人信息"
      }
    }, {
      "path": "editPhoneNumber/index",
      "style": {
        "navigationBarTitleText": "修改手机号"
      }
    }, {
      "path": "UAvatarCropper/index",
      "style": {
        "navigationBarTitleText": "头像上传",
        "navigationBarBackgroundColor": "#000000"
      }
    }, {
      "path": "requestSubscribeMessage/index",
      "style": {
        "navigationBarTitleText": "设置订阅"
      }
    }, {
      "path": "myOldMans/index",
      "style": {
        "navigationBarTitleText": "我的老人信息"
      }
    }, {
      "path": "editOldMan/index",
      "style": {
        "navigationBarTitleText": "" // 添加/编辑老人，动态设置标题
      }
    }, {
      "path": "report/index",
      "style": {
        "navigationBarTitleText": "快速报案"
      }
    }, {
      "path": "myMissions/index",
      "style": {
        "navigationBarTitleText": "已报案件"
      }
    }, {
      "path": "missionInformation/index",
      "style": {
        "navigationBarTitleText": "详细信息" // 案件详细信息
      }
    }, {
      "path": "mission/index",
      "style": {
        "navigationBarTitleText": "寻人"
      }
    }, {
      "path": "faceRecognitionHistory/index",
      "style": {
        "navigationBarTitleText": "人脸识别历史结果"
      }
    }, {
      "path": "poster/index",
      "style": {
        "navigationBarTitleText": "分享海报"
      }
    }, {
      "path": "announcement/index",
      "style": {
        "navigationBarTitleText": "公告详情"
      }
    }]
  }],
  "preloadRule": {
    "pagesA/report/index": {
      "network": "all",
      "packages": ["__APP__"]
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "归家行动家属端",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#f0f2f5",
    "usingComponents": {
      "painter": "/wxcomponents/painter/painter"
    }
  },
  "tabBar": {
    "color": "#666666",
    "selectedColor": "#000000",
    "backgroundColor": "#F8F8F8",
    "list": [{
      "pagePath": "pages/index/index",
      "text": "报案",
      "iconPath": "static/images/tabbar/home.png",
      "selectedIconPath": "static/images/tabbar/home-active.png"
    }, {
      "pagePath": "pages/me/index",
      "text": "我的",
      "iconPath": "static/images/tabbar/user.png",
      "selectedIconPath": "static/images/tabbar/user-active.png"
    }]
  },
  "condition": { //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式（list 的索引项）
    "list": [{
        "name": "首页",
        "path": "pages/index/index"
      },
      {
        "name": "个人页",
        "path": "pages/me/index",
        "query": ""
      }, {
        "name": "修改个人信息",
        "path": "pagesA/editProfile/index",
        "query": ""
      }, {
        "name": "修改手机号",
        "path": "pagesA/editPhoneNumber/index",
        "query": ""
      }, {
        "name": "我的老人信息",
        "path": "pagesA/myOldMans/index",
        "query": ""
      }, {
        "name": "新增老人信息",
        "path": "pagesA/editOldMan/index",
        "query": ""
      }, {
        "name": "报案",
        "path": "pagesA/report/index",
        "query": ""
      }, {
        "name": "已报案件",
        "path": "pagesA/myMissions/index",
        "query": ""
      }, {
        "name": "寻人",
        "path": "pagesA/mission/index",
        "query": "id=27"
      }, {
        "name": "分享海报",
        "path": "pagesA/poster/index",
        "query": "id=27"
      }
    ]
  }
}
